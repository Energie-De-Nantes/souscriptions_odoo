<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template de base simple pour éviter les problèmes website -->
    <template id="simple_portal_layout" name="Simple Portal Layout">
        <html>
            <head>
                <meta charset="utf-8"/>
                <meta name="viewport" content="width=device-width, initial-scale=1"/>
                <title>Portal Usager·ère - Souscriptions</title>
                <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
                <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet"/>
            </head>
            <body>
                <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
                    <div class="container">
                        <a class="navbar-brand" href="/my/souscriptions">
                            <i class="fa fa-bolt"/> Portal Usager·ère Énergie
                        </a>
                        <div class="navbar-nav ms-auto">
                            <span class="navbar-text me-3">
                                Connecté : <strong t-esc="request.env.user.name"/>
                            </span>
                            <a class="nav-link" href="/web/session/logout?redirect=/web">
                                <i class="fa fa-sign-out-alt"/> Déconnexion
                            </a>
                        </div>
                    </div>
                </nav>
                
                <div class="container">
                    <t t-out="0"/>
                </div>
                
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
            </body>
        </html>
    </template>

    <!-- Liste des souscriptions simplifiée -->
    <template id="portal_my_souscriptions" name="Mes Souscriptions">
        <t t-call="souscriptions.simple_portal_layout">
            <div class="row">
                <div class="col-12">
                    <h1 class="mb-4">Mes Souscriptions Électriques</h1>
                    
                    <t t-if="not souscriptions">
                        <div class="alert alert-warning" role="alert">
                            <p class="mb-0">Aucune souscription électrique trouvée.</p>
                            <p class="mb-0">Contactez votre fournisseur pour plus d'informations.</p>
                        </div>
                    </t>
                    
                    <t t-else="">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Référence</th>
                                        <th>PDL</th>
                                        <th>Puissance</th>
                                        <th>Type de tarif</th>
                                        <th>État</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="souscriptions" t-as="souscription">
                                        <tr>
                                            <td>
                                                <a t-attf-href="/my/souscription/#{souscription.id}" class="text-decoration-none">
                                                    <strong><t t-esc="souscription.name"/></strong>
                                                </a>
                                            </td>
                                            <td><t t-esc="souscription.pdl or '-'"/></td>
                                            <td><t t-esc="souscription.puissance_souscrite"/></td>
                                            <td>
                                                <t t-if="souscription.type_tarif == 'base'">Base</t>
                                                <t t-else="">HP/HC</t>
                                                <t t-if="souscription.tarif_solidaire">
                                                    <span class="badge rounded-pill text-bg-info ms-1">Solidaire</span>
                                                </t>
                                            </td>
                                            <td>
                                                <span t-attf-class="badge rounded-pill text-bg-#{souscription.active and 'success' or 'secondary'}">
                                                    <t t-esc="souscription.active and 'Active' or 'Inactive'"/>
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                <a t-attf-href="/my/souscription/#{souscription.id}" class="btn btn-sm btn-primary">
                                                    <i class="fa fa-eye"/> Consulter
                                                </a>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                        
                        <div t-if="pager" class="text-center mt-4">
                            <!-- Pagination simple -->
                            <t t-if="pager.get('page_previous')">
                                <a t-attf-href="/my/souscriptions/page/#{pager['page_previous']}" class="btn btn-outline-primary me-2">
                                    <i class="fa fa-chevron-left"/> Précédent
                                </a>
                            </t>
                            
                            <span class="mx-3">
                                Page <t t-esc="pager.get('page', 1)"/> sur <t t-esc="pager.get('page_count', 1)"/>
                            </span>
                            
                            <t t-if="pager.get('page_next')">
                                <a t-attf-href="/my/souscriptions/page/#{pager['page_next']}" class="btn btn-outline-primary ms-2">
                                    Suivant <i class="fa fa-chevron-right"/>
                                </a>
                            </t>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <!-- Détail d'une souscription simplifié -->
    <template id="portal_souscription_page" name="Détail Souscription">
        <t t-call="souscriptions.simple_portal_layout">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/my/souscriptions">Mes Souscriptions</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        <t t-esc="souscription.name"/>
                    </li>
                </ol>
            </nav>
            
            <h1 class="mb-4">Souscription <t t-esc="souscription.name"/></h1>
            
            <div class="row">
                <!-- Informations principales -->
                <div class="col-lg-8 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Informations du contrat</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <table class="table table-sm table-borderless">
                                        <tr>
                                            <td class="text-muted">PDL</td>
                                            <td class="fw-bold"><t t-esc="souscription.pdl or '-'"/></td>
                                        </tr>
                                        <tr>
                                            <td class="text-muted">Puissance souscrite</td>
                                            <td class="fw-bold"><t t-esc="souscription.puissance_souscrite"/></td>
                                        </tr>
                                        <tr>
                                            <td class="text-muted">Type de tarif</td>
                                            <td class="fw-bold">
                                                <t t-if="souscription.type_tarif == 'base'">Base</t>
                                                <t t-else="">Heures Pleines / Heures Creuses</t>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-muted">Tarif solidaire</td>
                                            <td>
                                                <t t-if="souscription.tarif_solidaire">
                                                    <span class="badge rounded-pill text-bg-success">Oui</span>
                                                </t>
                                                <t t-else="">
                                                    <span class="badge rounded-pill text-bg-secondary">Non</span>
                                                </t>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-6">
                                    <table class="table table-sm table-borderless">
                                        <tr>
                                            <td class="text-muted">Début du contrat</td>
                                            <td class="fw-bold">
                                                <t t-if="souscription.date_debut">
                                                    <t t-esc="souscription.date_debut.strftime('%d/%m/%Y')"/>
                                                </t>
                                                <t t-else="">Non défini</t>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-muted">État de facturation</td>
                                            <td>
                                                <span class="badge rounded-pill text-bg-primary">
                                                    <t t-esc="souscription.etat_facturation_id.name"/>
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-muted">Mode de paiement</td>
                                            <td class="fw-bold">
                                                <t t-if="souscription.mode_paiement">
                                                    <t t-esc="dict(souscription._fields['mode_paiement'].selection).get(souscription.mode_paiement, souscription.mode_paiement)"/>
                                                </t>
                                                <t t-else="">Non défini</t>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            
                            <t t-if="souscription.lisse">
                                <div class="alert alert-info mt-3">
                                    <h6 class="alert-heading">
                                        <i class="fa fa-info-circle"/> Facturation lissée
                                    </h6>
                                    <p class="mb-0">
                                        Provision mensuelle : <strong><t t-esc="souscription.provision_mensuelle_kwh"/> kWh</strong>
                                    </p>
                                </div>
                            </t>
                            
                            <t t-if="souscription.coeff_pro > 0">
                                <div class="alert alert-warning mt-3">
                                    <p class="mb-0">
                                        <i class="fa fa-building"/> Client professionnel - Majoration : <strong><t t-esc="souscription.coeff_pro"/>%</strong>
                                    </p>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
                
                <!-- Sidebar informations -->
                <div class="col-lg-4 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0">Informations utiles</h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <small class="text-muted d-block">Référence compteur</small>
                                <strong><t t-esc="souscription.ref_compteur or 'Non renseigné'"/></strong>
                            </div>
                            
                            <div class="mb-3">
                                <small class="text-muted d-block">Numéro de dépannage</small>
                                <strong><t t-esc="souscription.numero_depannage or '09 726 750 XX'"/></strong>
                            </div>
                            
                            <div class="alert alert-light">
                                <small>
                                    <i class="fa fa-info-circle text-primary"/> 
                                    Pour toute question, contactez votre fournisseur d'énergie.
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Factures récentes -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Factures récentes</h5>
                        </div>
                        <div class="card-body">
                            <t t-if="souscription.facture_ids">
                                <div class="table-responsive">
                                    <table class="table table-sm table-striped">
                                        <thead>
                                            <tr>
                                                <th>Numéro</th>
                                                <th>Date</th>
                                                <th>Période</th>
                                                <th>Montant TTC</th>
                                                <th>État</th>
                                                <th class="text-end">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="souscription.facture_ids[:10]" t-as="facture">
                                                <tr>
                                                    <td>
                                                        <strong><t t-esc="facture.name"/></strong>
                                                    </td>
                                                    <td>
                                                        <t t-if="facture.invoice_date">
                                                            <t t-esc="facture.invoice_date.strftime('%d/%m/%Y')"/>
                                                        </t>
                                                        <t t-else="">-</t>
                                                    </td>
                                                    <td>
                                                        <t t-if="facture.periode_id">
                                                            <t t-esc="facture.periode_id.mois_annee"/>
                                                        </t>
                                                        <t t-else="">-</t>
                                                    </td>
                                                    <td>
                                                        <strong><t t-esc="'%.2f' % facture.amount_total"/> €</strong>
                                                    </td>
                                                    <td>
                                                        <t t-if="facture.payment_state == 'paid'">
                                                            <span class="badge rounded-pill text-bg-success">
                                                                <i class="fa fa-check"/> Payée
                                                            </span>
                                                        </t>
                                                        <t t-elif="facture.payment_state == 'partial'">
                                                            <span class="badge rounded-pill text-bg-warning">Partielle</span>
                                                        </t>
                                                        <t t-else="">
                                                            <span class="badge rounded-pill text-bg-danger">Impayée</span>
                                                        </t>
                                                    </td>
                                                    <td class="text-end">
                                                        <a t-attf-href="/my/invoices/#{facture.id}" 
                                                           class="btn btn-sm btn-outline-secondary"
                                                           title="Voir la facture" target="_blank">
                                                            <i class="fa fa-eye"/>
                                                        </a>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </t>
                            <t t-else="">
                                <p class="text-muted">Aucune facture émise pour cette souscription.</p>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>