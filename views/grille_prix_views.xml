<odoo>
    <record id="view_grille_prix_form" model="ir.ui.view">
        <field name="name">grille.prix.form</field>
        <field name="model">grille.prix</field>
        <field name="arch" type="xml">
            <form string="Grille de Prix">
                <header>
                    <button name="dupliquer_cette_grille" type="object" 
                            string="Dupliquer cette grille" 
                            class="btn-primary"
                            invisible="not id"/>
                    <button name="definir_comme_grille_actuelle" type="object" 
                            string="Définir comme grille actuelle" 
                            class="btn-secondary"
                            invisible="not id"
                            help="Active cette grille et ferme l'ancienne grille actuelle"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="toggle_active" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date_debut"/>
                            <field name="date_fin" readonly="1"/>
                        </group>
                        <group>
                            <field name="nb_lignes"/>
                            <field name="is_current" widget="boolean" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Tous les Prix">
                            <field name="ligne_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="type_produit"/>
                                    <field name="prix_base_3kva" invisible="type_produit != 'abonnement'"/>
                                    <field name="prix_unitaire" invisible="type_produit != 'energie'"/>
                                    <field name="unite_saisie" readonly="1"/>
                                    <field name="prix_interne" readonly="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_grille_prix_list" model="ir.ui.view">
        <field name="name">grille.prix.list</field>
        <field name="model">grille.prix</field>
        <field name="arch" type="xml">
            <list string="Grilles de Prix">
                <field name="name"/>
                <field name="date_debut"/>
                <field name="date_fin"/>
                <field name="nb_lignes"/>
                <field name="is_current" widget="boolean"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>

    <record id="view_grille_prix_kanban" model="ir.ui.view">
        <field name="name">grille.prix.kanban</field>
        <field name="model">grille.prix</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="date_debut"/>
                <field name="date_fin"/>
                <field name="is_current"/>
                <field name="nb_lignes"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <i class="fa fa-calculator fa-2x" title="Grille de prix" t-att-style="record.is_current.raw_value ? 'color: green' : 'color: gray'"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div>Du <field name="date_debut"/></div>
                                <div t-if="record.date_fin.raw_value">Au <field name="date_fin"/></div>
                                <div t-if="!record.date_fin.raw_value"><strong>En cours</strong></div>
                                <div><field name="nb_lignes"/> prix définis</div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action pour les grilles de prix -->
    <record id="action_grille_prix" model="ir.actions.act_window">
        <field name="name">Grilles de Prix</field>
        <field name="res_model">grille.prix</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer votre première grille de prix
            </p>
            <p>
                Les grilles de prix définissent les tarifs applicables à partir d'une date donnée.
                La création d'une nouvelle grille ferme automatiquement la précédente.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem
        id="menu_grille_prix"
        name="Grilles de Prix"
        parent="souscriptions.menu_souscription_root"
        action="action_grille_prix"
        sequence="20"/>
        
    <!-- Ligne de prix (vue formulaire dédiée) -->
    <record id="view_grille_prix_ligne_form" model="ir.ui.view">
        <field name="name">grille.prix.ligne.form</field>
        <field name="model">grille.prix.ligne</field>
        <field name="arch" type="xml">
            <form string="Ligne de Prix">
                <group>
                    <field name="grille_id"/>
                    <field name="product_id"/>
                    <field name="type_produit"/>
                </group>
                <group string="Tarification abonnement" invisible="type_produit != 'abonnement'">
                    <field name="prix_base_3kva"/>
                </group>
                <group string="Tarification énergie" invisible="type_produit != 'energie'">
                    <field name="prix_unitaire"/>
                </group>
                <group string="Informations calculées">
                    <field name="unite_saisie" readonly="1"/>
                    <field name="unite_calcul" readonly="1"/>
                    <field name="prix_interne" readonly="1"/>
                </group>
            </form>
        </field>
    </record>
</odoo>